{
	// Some typical compiler options
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"outDir": "dist",
		"removeComments": true,
		"skipLibCheck": true
	},
	"include": ["src/**/*"],
	"exclude": ["node_modules/**/*", "src/**/*.spec.ts", "dist/**/*"],
}
